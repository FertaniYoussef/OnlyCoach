                                        <a href="{{ path('app_course', {'id' : course.id}) }}"><div id="CourseContainer" name="{{ course.title }}" class="group">
                                            <div class="flex flex-col justify-between py-3 px-4 w-full h-[10rem] bg-black  shadow-lg rounded-sm  bg-cover sm:group-hover:brightness-[90%]" style="background-image: url('/images/{{ course.background }}')"></div>
