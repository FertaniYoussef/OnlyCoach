<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-slate-50">
<nav class="bg-gradient-to-b from-teal-600/10 to-slate-50 " >
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 justify-between">
            <div class="flex">
                <div class="flex flex-shrink-0 items-center">
                    <a href="{{ path('app_main') }}"><img class="block h-8 w-auto lg:hidden" src="{{ asset('images/onlycoachlogo.png')}}" alt="Your Company"></a>
                    <a href="{{ path('app_main') }}"><img class="lg:block h-8 w-auto hidden" src="{{ asset('images/onlycoachlogo.png')}}" alt="Your Company"></a>
                </div>
                <div class="hidden ml-12 sm:flex space-x-8">
                    <!-- Current: "border-indigo-500 text-gray-900", Default: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700" -->
                    <a href="{{ path('app_courses_popular') }}" class="inline-flex items-center border-b-2 border-indigo-500 px-1 pt-1 text-sm font-medium text-gray-900">Popular</a>
                    <a href="{{ path('app_coach') }}" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Coachs</a>
                    <a href="#" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Contact</a>
                </div>


            </div>
            <div class="hidden sm:ml-6 sm:flex sm:items-center">

                <button type="button" data-modal-target="popup-modal" data-modal-toggle="popup-modal"  class="rounded-full bg-white p-1 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    <span class="sr-only">View notifications</span>
                    <h1>Liste des r√©ponses</h1>

                    <button type="button" data-modal-target="popup-modal" data-modal-toggle="popup-modal" class="rounded-full bg-white p-1 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                        <span class="sr-only">View notifications</span>
                        Afficher le tableau
                    </button>

                    <div id="popup-modal" class="fixed z-10 inset-0 overflow-y-auto hidden">
                        <div class="flex items-center justify-center min-h-screen">
                            <div class="bg-white rounded-lg p-8">
                                <table class="table-auto">
                                    <thead>
                                    <tr>
                                        <th class="px-4 py-2">ID</th>
                                        <th class="px-4 py-2">Texte</th>
                                        <th class="px-4 py-2">Feedback</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for reponse in reponses %}
                                        <tr>
                                            <td class="border px-4 py-2">{{ reponse.id }}</td>
                                            <td class="border px-4 py-2">{{ reponse.texte }}</td>
                                            <td class="border px-4 py-2">{{ reponse.Feedback.id}}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <button class="mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" data-modal-toggle="popup-modal">Fermer</button>
                            </div>
                        </div>
                    </div>
                    <!-- Heroicon name: outline/bell -->
                    <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                    </svg>

                </button>




    <script>
        const modal = document.querySelector('[data-modal-target]')
        const toggleButtons = document.querySelectorAll('[data-modal-toggle]')

        toggleButtons.forEach(button => {
            button.addEventListener('click', () => {
                const target = document.querySelector(button.dataset.modalTarget)
                target.classList.toggle('hidden')
            })
        })

        window.addEventListener('click', e => {
            if (e.target === modal) {
                modal.classList.add('hidden')
            }
        })
    </script>

</body>
</html>